{
  "info": {
    "name": "Auth API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"123456\",\n    \"role\": \"SYSADMIN\",\n    \"contactInformation\": \"admin@example.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:18123/api/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "18123",
          "path": ["api", "auth", "register"]
        }
      }
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:18123/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "18123",
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Verify Token",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:18123/api/auth/verify-token",
          "protocol": "http",
          "host": ["localhost"],
          "port": "18123",
          "path": ["api", "auth", "verify-token"]
        }
      }
    }
  ]
}